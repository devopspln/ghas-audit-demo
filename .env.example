# GitHub Advanced Security Audit Configuration
# Copy this file to .env and fill in your values

# GitHub Personal Access Token with security_events:read scope
# Required for accessing security alerts across your organization
GH_PAT_READ_ORG=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Organization name to audit
GITHUB_ORG=your-org-name

# Optional: Specific repositories to audit (comma-separated)
# Leave empty to audit all repositories in the organization
AUDIT_REPOS=

# Report output directory
REPORT_DIR=./reports

# Dashboard configuration
DASHBOARD_TITLE=Security Audit Dashboard
DASHBOARD_THEME=dark

# Slack webhook URL for notifications (optional)
SLACK_WEBHOOK_URL=

# Email configuration for report delivery (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
REPORT_EMAIL_TO=

# Audit schedule (cron format for scheduled runs)
AUDIT_SCHEDULE=0 0 * * 1  # Weekly on Monday at midnight